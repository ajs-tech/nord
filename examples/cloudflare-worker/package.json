{
  "name": "toddle-cloudflare-worker",
  "scripts": {
    "predev": "bun scripts/syncStaticAssets.js && bunx esbuild --bundle --outdir=dist --platform=node --format=esm src/index.ts",
    "dev": "wrangler dev --no-bundle",
    "predeploy": "bun scripts/syncStaticAssets.js && bunx esbuild --bundle --outdir=dist --platform=node --format=esm src/index.ts",
    "deploy": "wrangler deploy --no-bundle",
    "typecheck": "tsc --noEmit",
    "watch": "tsc --noEmit -w"
  },
  "dependencies": {
    "@toddledev/core": "0.0.4-alpha.5",
    "@toddledev/ssr": "0.0.4-alpha.5",
    "hono": "4.6.16"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "4.20250303.0",
    "@toddledev/runtime": "0.0.4-alpha.5",
    "wrangler": "3.114.0",
    "typescript": "5.8.2"
  }
}
